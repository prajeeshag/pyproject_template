[build-system]
requires = ["pdm-backend"]
build-backend = "pdm.backend"

[project]
name = "{{project_slug}}"
dynamic = ["version"]
description = ""
authors = [{ name = "{{author_name}}", email = "{{author_email}}" }]
license = { file = "LICENSE" }
readme = "README.md"
requires-python = "{{requires_python}}"
dependencies = []

[project.scripts]
# {{module_name}} = "{{module_name}}:app"

[project.urls]
homepage = "https://{{ghname}}.github.io/{{project_slug}}"
repository = "https://github.com/prajeeshag/{{project_slug}}"
documentation = "https://{{ghname}}.github.io/{{project_slug}}"

[tool.pdm.build]
excludes = ["tests", "examples"]

[tool.pdm.version]
source = "scm"

[tool.pytest.ini_options]
testpaths = ["tests"]

[tool.commitizen]
name = "cz_gitmoji"

[tool.uv]
default-groups = ["dev", "docs"]

[dependency-groups]
dev = ["pytest","pytest_mock", "pytest-sugar", "pytest-cov", "ruff", "mypy"]
docs = [
    "mkdocs",
    "mkdocs-material",
]

[tool.coverage.run]
source = ["{{module_name}}"]
branch = true

[tool.coverage.report]
show_missing = true
skip_covered = true